{
  "name": "my-shop",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/anassNadir/my-shop.git"
  },
  "workspaces": [
    "app/client/",
    "app/server/packages/*",
    "app/server/services/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "commit": "cz",
    "build-packages": "tsc -b app/server/packages/*",
    "clean-packages": "tsc -b app/server/packages/* --clean",
    "lint": "eslint . --ext .js,.ts",
    "lint-fix": "eslint . --ext .js,.ts --fix",
    "test-staged": "jest --bail --onlyChanged",
    "test-ci": "jest --bail --lastCommit --runInBand",
    "release": "lerna publish --conventional-commits",
    "pre-release": "lerna publish --conventional-commits --conventional-prerelease",
    "prettier-check": "prettier --check '**/*.{js,ts,jsx,scss,json,yaml,yml,md}'"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@commitlint/config-lerna-scopes": "^12.0.1",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "conventional-changelog-conventionalcommits": "^4.5.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.1",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,scss,json,yaml,yml,md}": [
      "prettier --write"
    ]
  }
}
