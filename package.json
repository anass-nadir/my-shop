{
  "name": "my-shop",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/anassNadir/my-shop.git"
  },
  "workspaces": [
    "app/client/",
    "app/server/packages/*",
    "app/server/services/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "commit": "cz",
    "build": "lerna run build --stream",
    "watch": "lerna run watch --parallel",
    "clean": "lerna run clean --stream",
    "build:changed": "lerna run --concurrency 1 --stream build --since 'HEAD^' --exclude-dependents",
    "clean:changed": "lerna run --concurrency 1 --stream clean --since 'HEAD^' --exclude-dependents",
    "watch:common": "lerna run watch --scope @anass-nadir/my-shop-common --stream",
    "build:common": "lerna run build --scope @anass-nadir/my-shop-common --stream",
    "lint": "eslint . --ext .ts,tsx",
    "lint-fix": "eslint . --ext .ts,.tsx --fix",
    "test": "jest",
    "test-ci": "jest --bail --runInBand --ci",
    "test-staged": "jest --bail --onlyChanged",
    "test-lastCommit": "jest --bail --lastCommit --runInBand",
    "release": "lerna publish --conventional-graduate --yes",
    "pre-release": "lerna publish --conventional-prerelease --yes",
    "prettier-check": "prettier --check '**/*.{ts,scss,json,yaml,yml,md}'",
    "predev": "chmod +x ./scripts/predev-deploy.sh & ./scripts/predev-deploy.sh",
    "dev": "concurrently --kill-others-on-fail -s first \"yarn watch:common\" \"wait-on ./app/server/packages/common/build/index.js && skaffold dev\""
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "@types/jest": "^26.0.21",
    "@types/supertest": "^2.0.10",
    "concurrently": "^6.0.0",
    "conventional-changelog-conventionalcommits": "^4.5.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.1",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^5.1.3",
    "jest": "26.6.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "mongodb-memory-server": "^6.9.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "wait-on": "^5.3.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{ts,scss,json,yaml,yml,md}": [
      "prettier --write"
    ]
  }
}
