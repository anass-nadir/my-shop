{
  "name": "my-shop",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/anassNadir/my-shop.git"
  },
  "scripts": {
    "prepare": "husky install",
    "commit": "cz",
    "test": "jest --bail --onlyChanged",
    "prettier:write": "prettier --write",
    "prettier:check": "prettier --check 'app/client/**/*.{js,jsx,scss}' 'app/server/**/*.{ts,js}'"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "app/client/**/*.{js,jsx,scss,json}": [
      "npm run prettier:write"
    ],
    "app/server/**/*.{ts,js,json}": [
      "npm run prettier:write"
    ]
  }
}
