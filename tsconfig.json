{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "Node",
    "lib": ["ES2019"],
    "target": "ES2019",
    "strict": true,
    "noEmitOnError": true,
    "declaration": true,
    "noImplicitAny": false,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "typeRoots": ["node_modules/@types", "app/@types"],
    "outDir": "build"
  },
  "include": ["./app/server", "app/@types"]
}
