{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["app/packages/*", "app/services/*"],
  "command": {
    "version": {
      "allowBranch": ["master", "prerelease"],
      "conventionalCommits": true,
      "createRelease": "github",
      "changelogPreset": "conventional-changelog-conventionalcommits",
      "exact": true,
      "ignoreChanges": [
        "**/*.md",
        "**/__test__/**",
        "**/test/**",
        "**/Dockerfile*",
        "**/jest.config.*",
        "**/tsconfig.*",
        "**/*.yaml"
      ],
      "message": "chore(release): changes released ðŸŽ‰"
    },
    "run": {
      "npmClient": "yarn"
    }
  }
}
